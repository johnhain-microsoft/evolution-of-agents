{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "contentVersion": "1.0.0.0",
        "actions": {
            "Create_event": {
                "type": "Http",
                "inputs": {
                    "method": "POST",
                    "uri": "https://graph.microsoft.com/v1.0/me/calendar/events",
                    "authentication": {
                        "type": "ManagedServiceIdentity",
                        "audience": "https://graph.microsoft.com"
                    },
                    "headers": {
                        "Content-Type": "application/json"
                    },
                    "body": {
                        "subject": "@{triggerBody()?['subject']}",
                        "start": {
                            "dateTime": "@{triggerBody()?['start']}",
                            "timeZone": "UTC"
                        },
                        "end": {
                            "dateTime": "@{triggerBody()?['end']}",
                            "timeZone": "UTC"
                        },
                        "body": {
                            "contentType": "Text",
                            "content": "@{triggerBody()?['body']}"
                        },
                        "location": {
                            "displayName": "@{triggerBody()?['location']}"
                        },
                        "attendees": "@{triggerBody()?['attendees']}"
                    }
                },
                "runAfter": {}
            },
            "Response": {
                "type": "Response",
                "kind": "Http",
                "inputs": {
                    "statusCode": 200,
                    "body": {
                        "status": "success",
                        "eventId": "@{body('Create_event')?['id']}",
                        "message": "Calendar event created successfully"
                    }
                },
                "runAfter": {
                    "Create_event": [
                        "Succeeded"
                    ]
                }
            }
        },
        "outputs": {},
        "triggers": {
            "When_a_HTTP_request_is_received": {
                "type": "Request",
                "kind": "Http",
                "inputs": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "subject": {
                                "type": "string",
                                "description": "Event subject/title"
                            },
                            "start": {
                                "type": "string",
                                "description": "Event start time (ISO 8601 format)"
                            },
                            "end": {
                                "type": "string",
                                "description": "Event end time (ISO 8601 format)"
                            },
                            "body": {
                                "type": "string",
                                "description": "Event body/description"
                            },
                            "location": {
                                "type": "string",
                                "description": "Event location"
                            },
                            "attendees": {
                                "type": "array",
                                "description": "List of attendee email addresses"
                            }
                        },
                        "required": [
                            "subject",
                            "start",
                            "end"
                        ]
                    }
                }
            }
        }
    },
    "kind": "Stateful"
}
